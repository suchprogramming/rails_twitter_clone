<div class="well" id="new_tweet">
  <%= form_for @tweet, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :tweet_text, 'Tweet Text' %>
      <%= f.text_field :tweet_text, :placeholder => 'Tweet Text', :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :username, value: current_user.username %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :handle, value: current_user.handle %>
    </div>
    <%=f.submit :class => 'btn btn-success' %>
  <% end %>
</div>
